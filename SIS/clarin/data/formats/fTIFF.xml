<?xml-model href="../../schemas/format.xsd" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<format xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="fTIFF" xsi:noNamespaceSchemaLocation="../../schemas/format.xsd" display="show">
  <titleStmt>
    <title>Tagged Image File Format</title>
    <abbr>TIFF</abbr>
  </titleStmt>
  <keyword>image format</keyword>
  <keyword>raster graphics</keyword>
  <extId type="LOC">fdd000023</extId>
  <info type="description">
    <p>Please feel welcome to supply the description of this format file via GitHub: either as an
      <a href="https://github.com/clarin-eric/standards/issues">issue report</a>, or as a pull
      request after forking or browsing the
      <a href="https://github.com/clarin-eric/standards/tree/formats/SIS/clarin/data/formats">code under the 'formats' branch</a>.</p>
<!--  mention that uncompressed is the default, others are possible  -->
  </info>
  <!--<relation target="SpecTIFF" type="isDefinedBy"/>
    ISO 12639
   -->
  <mimeType>image/tiff</mimeType>
  <fileExt recommended="yes">.tiff</fileExt>
  <fileExt>.tif</fileExt>
  <formatFamily>uncompressed</formatFamily>  <!--this is probably impractical -->
</format>